{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM"
    ],
    "paths": {
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/components/*": [
        "src/components/*.astro"
      ],
      "@/layouts/*": [
        "src/layouts/*.astro"
      ],
      "@/utils/*": [
        "src/utils/*.ts"
      ],
      "@/stores/*": [
        "src/stores/*"
      ],
      "@/types": [
        "src/types.ts"
      ],
      "@/site-config": [
        "src/site.config.ts"
      ]
    },
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": [
    "src",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".vscode",
    "dist"
  ]
}
